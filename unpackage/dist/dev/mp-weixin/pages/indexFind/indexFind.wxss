.indexFind {
  width: 100%;
  padding-top: 80rpx;
}
.indexFind .indexFind-tabs {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 0 40rpx;
}
.indexFind .indexFind-tabs .indexFind-tabs-list {
  padding: 40rpx 0;
  text-align: center;
  font-weight: 700;
  border-bottom: 3px solid transparent;
  color: #767676;
  transition: all 0.3s linear;
}
.indexFind .indexFind-tabs .indexFind-tabs-list.active {
  color: #000;
  border-bottom: 3px solid #0058a3;
}
.indexFind .indexFind-item {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  padding: 0 40rpx;
  padding-top: 60rpx;
}
.indexFind .indexFind-item .indexFind-list {
  width: 320rpx;
  margin-bottom: 50rpx;
}
.indexFind .indexFind-item .indexFind-list .indexFind-list-img {
  display: block;
  width: 320rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
  border-radius: 10px;
}
.indexFind .indexFind-item .indexFind-list .indexFind-list-font {
  font-size: 24rpx;
  text-align: center;
}
