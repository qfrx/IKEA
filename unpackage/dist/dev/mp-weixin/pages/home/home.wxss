}
.recent-recommendations .scroll-item:nth-child(even) {
  color: #000;
}
.recent-recommendations .scroll-item:nth-child(even) .text-title {
  font-weight: bold;
  font-size: 26rpx;
  margin-bottom: 5px;
}
.recent-recommendations .scroll-item:nth-child(even) .text {
  font-size: 20rpx;
  opacity: .9;
}
.recent-recommendations .scroll-item:nth-child(even) .icon {
  background-color: #000;
  color: #fff;
}
.recent-recommendations .scroll-item:nth-child(4) {
  color: #fff;
}
.recent-recommendations .scroll-item:nth-child(4) .text-title {
  font-weight: bold;
  font-size: 26rpx;
  margin-bottom: 5px;
}
.recent-recommendations .scroll-item:nth-child(4) .text {
  font-size: 20rpx;
  opacity: .9;
}
.recent-recommendations .scroll-item:nth-child(4) .icon {
  background-color: #fff;
  color: #000;
}
.recent-recommendations .img-recommend-scroll {
  width: 290rpx;
  height: 290rpx;
  display: block;
}
