.classificationAnkings {
  position: relative;
}
.header-back {
  position: fixed;
  top: 0;
  left: 0;
  padding: 10px 0 10px 10px;
}
.header-back .iconfont {
  font-size: 20px;
  font-weight: bolder;
  color: #fff;
}
.header {
  width: 100%;
  height: 25vh;
  background-color: #ad4646;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.header .title {
  font-size: 28px;
}
.header .title .iconfont {
  font-size: 28px;
}
.header .des {
  font-size: 12px;
  opacity: .7;
  margin-top: 10px;
}
.header .title-list {
  box-sizing: border-box;
  padding: 0 20px;
  min-width: 100vw;
  display: flex;
  justify-content: flex-start;
  overflow: auto;
  position: absolute;
  bottom: 20px;
}
.header .title-item {
  flex-shrink: 0;
  padding: 12px 16px;
  font-size: 12px;
  background-color: #0000002a;
  border-radius: 999px;
  margin: 0 6px;
}
.header .title-item.active {
  background-color: #fff;
  color: #111;
}

