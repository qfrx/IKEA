.recent-recommendations {
  margin: 0 20px 30px;
}
.recent-recommendations .title {
  font-size: 30rpx;
  color: #111;
  font-weight: bolder;
  margin-bottom: 30rpx;
}
.recent-recommendations .icon {
  width: 66rpx;
  height: 66rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.recent-recommendations .icon-arrowRight1 {
  font-size: 24px;
}
.recent-recommendations .scroll-item {
  margin-right: 10px;
}
.recent-recommendations .scroll-item:nth-child(odd) {
  color: #fff;
}
.recent-recommendations .scroll-item:nth-child(odd) .text-title {
  font-weight: bold;
  font-size: 26rpx;
  margin-bottom: 5px;
}
.recent-recommendations .scroll-item:nth-child(odd) .text {
  font-size: 20rpx;
  opacity: .9;
}
