  width: 290rpx;
  height: 290rpx;
  padding: 15px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}
.recommendations-card {
  margin-top: 30px;
}
.recommendations-card .recommendations-card-item {
  margin-bottom: 20px;
}
.recommendations-card .card-image {
  display: block;
  width: 100%;
}
.recommendations-card .text {
  margin-top: 5px;
  color: #848484;
  font-size: 26rpx;
}
.top-selling {
  margin: 0 20px 30px;
}
.top-selling .title {
  font-size: 30rpx;
  color: #111;
  font-weight: bolder;
  margin-bottom: 30rpx;
}
.top-selling .card {
