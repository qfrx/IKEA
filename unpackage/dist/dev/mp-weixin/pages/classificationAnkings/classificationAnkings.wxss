.classificationAnkings {
  position: relative;
}
.header-back {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  padding: 10px 0 10px 10px;
  z-index: 999;
  transition: all, 1.5s;
}
.header-back .iconfont {
  font-size: 20px;
  font-weight: bolder;
  color: #fff;
}
.header {
  width: 100%;
  height: 25vh;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all, 1.5s;
  position: relative;
}
.header .title {
  font-size: 28px;
}
.header .title .iconfont {
  font-size: 28px;
}
.header .des {
  font-size: 12px;
  opacity: .7;
  margin-top: 10px;
}
.header .title-list {
  box-sizing: border-box;
  padding: 0 20px;
  min-width: 100vw;
  display: flex;
  justify-content: flex-start;
  overflow: auto;
  position: absolute;
  left: 0;
  bottom: 20px;
}
.header .title-item {
  flex-shrink: 0;
  padding: 12px 16px;
  font-size: 12px;
  background-color: #0000002a;
  border-radius: 999px;
  margin: 0 6px;
}
.header .title-item.active {
  background-color: #fff;
  color: #111;
}
.loading-conter-host {
  background-color: #ececec;
}
.loading-conter-host .loding-item {
  padding: 40px;
  background-color: #fff;
  margin: 10px;
  border-radius: 10px;
  display: flex;
}
.goods-conter-host {
  background-color: #ececec;
}
.goods-conter-host .good-item {
  background-color: #fff;
  margin: 15px;
  padding: 10px 20px;
  border-radius: 10px;
  display: flex;
  align-items: center;
  font-size: 12px;
  position: relative;
}
.goods-conter-host .good-item .icon {
  position: absolute;
  top: 0;
  left: 20px;
}
.goods-conter-host .good-item .icon .iconfont {
  font-size: 32px;
  position: relative;
}
.goods-conter-host .good-item .icon .num {
  position: absolute;
  top: 6px;
  left: 6px;
  background-color: transparent;
  color: #fff;
  font-size: 16px;
}
.goods-conter-host .good-item .img {
  width: 80px;
  height: 80px;
}
.goods-conter-host .good-item .info {
  padding: 20px 14px 20px 24px;
}
.goods-conter-host .good-item .name {
  font-weight: bolder;
  margin-bottom: 5px;
}
.goods-conter-host .good-item .des {
  opacity: .6;
}
.goods-conter-host .good-item .sum {
  margin-top: 12px;
  display: flex;
}
.goods-conter-host .good-item .num {
  background-color: #fff3db;
  color: #d68e14;
  padding: 0 5px;
}
.goods-conter-host .good-item .price {
  font-weight: bold;
  display: flex;
  margin-top: 10px;
}
.goods-conter-host .good-item .price-num::first-letter {
  font-size: 18px;
}
.goods-conter-host .good-item .iconfont {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
.loading-conter-hobby {
  background-color: #ececec;
}
.loading-conter-hobby .loding-item {
  padding: 10px;
  background-color: #fff;
  margin: 10px;
  border-radius: 10px;
  display: flex;
}
.goods-conter-hobby {
  background-color: #ececec;
}
.goods-conter-hobby .good-item {
  background-color: #fff;
  margin: 10px;
  padding: 10px;
}
.goods-conter-hobby .swiper {
  width: 180px;
}

